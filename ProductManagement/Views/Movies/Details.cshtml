@model ProductManagement.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    @if(Model.ReleaseDate.HasValue)
    {
        <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    }
    @if (Model.DateAdded.HasValue)
    {
        <li>Date Added: @Model.DateAdded.Value.ToString("D")</li>
    }
    @if (Model.Stock.HasValue)
    {
        <li>Number in Stock: @Model.Stock</li>
    }
</ul>

